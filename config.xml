			</tool>			
		</tools>
		<scene>
			<property name="ball_margin" type="real" value="0.025"/>
			<property name="background" type="string" value="map"/>
			<property name="mask" type="string" value="map_mask"/>
			<property name="highlight_targets" type="bool" value="false"/>
			<property name="num_points" type="int" value="200"/>
			<property name="point_radius" type="real" value="0.0023"/>
			<property name="target_radius" type="real" value="0.0023"/>
			<property name="min_target_distance" type="real" value="0.9"/>
			<property name="max_target_distance" type="real" value="0.9"/>
			<property name="aspect_ratio" type="real" value="1.5"/>
		</scene>
	</task>
</study>